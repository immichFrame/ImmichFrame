<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ImmichFrame.Views.Templates">
	<Design.PreviewWith>
		<Border Padding="200"></Border>
	</Design.PreviewWith>
	<Style Selector="controls|SettingsSection">
		<Setter Property="Template">
			<ControlTemplate>
				<Border Background="#393939"
						CornerRadius="3"
						Padding="15">
					<ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding Template}" />
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
